<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>

<script>
    const app = Vue.createApp({

        data() {
            return {
                //Pagina Actual
                pag: 0,
                //Fecha y Hora seleccionada
                fechaSeleccionada: "",
                horaSeleccionada: "",
                //Variable para mostrar error
                showError: false,
                //Datos del paciente
                pacNombreApellido: "",
                pacTelefono: "",
                pacEmail: "",
                //Response Ajax
                reservaSuccess: false,
                reservaConfirmada: {},
            }
        },
        computed: {
            computedDataTelefono: {
                get() {
                    return this.pacTelefono.toString()
                },
                set(val) {
                    this.pacTelefono = Number(val)
                }
            }
        },
        components: {
            Datepicker: VueDatePicker
        },
        methods: {
            nextStep() {
                if (this.fechaSeleccionada == "") {
                    this.showError = true;
                } else {
                    this.botonInicial();
                }
            },
            setDia(edit) {
                if (edit) {
                    this.horaSeleccionada = "";
                }
                this.pag = 2;
            },
            setHorario(edit) {
                this.pag = 3;
            },
            selectHora(hora) {
                this.horaSeleccionada = hora;
                this.botonInicial();
            },

            goFirstPage() {
                this.pag = 1;
            },
            botonInicial() {
                if (this.fechaSeleccionada != "" && this.horaSeleccionada != "") {
                    this.pag = 4;
                }
                if (this.fechaSeleccionada == "" && this.horaSeleccionada != "") {
                    this.pag = 2;
                }
                if (this.fechaSeleccionada != "" && this.horaSeleccionada == "") {
                    this.pag = 3;
                }
                if (this.fechaSeleccionada == "" && this.horaSeleccionada == "") {
                    this.pag = 2;
                }
            },
            btnConfirmarTurno() {
                if (this.pacNombreApellido == "" || this.pacTelefono == "" || this.pacEmail == "" || this.fechaSeleccionada == "" || this.horaSeleccionada == "") {
                    this.showError = true;
                } else {
                    this.pag = 5;

                    //Obj: turno
                    const turno = {
                        Cliente: this.pacNombreApellido,
                        Telefono: this.pacTelefono.toString(),
                        Email: this.pacEmail,
                        Fecha: this.fechaSeleccionada,
                        Hora: this.horaSeleccionada,
                        Profesional: 'Lucia Chang'
                    }

                    console.log(JSON.stringify(turno))

                    fetch('@Url.Action("ConfirmarTurno", "Home")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json', // Indica que los datos son JSON
                        },
                        body: JSON.stringify(turno), // Convierte el objeto JSON a una cadena JSON
                    })
                        .then(response => response.json())
                        .then(responseData => {
                            console.log(responseData)
                            if (responseData.success) {
                                this.reservaSuccess = true;
                                this.reservaConfirmada = responseData.turnoConfirmado
                            }
                            this.pag = 6;

                            setTimeout(() => {
                                console.log(this.reservaConfirmada)
                                this.pag = 7;
                            }, 3000)

                        })
                        .catch(error => {
                            this.pag = 6;
                            console.error('Error al enviar la solicitud:', error);
                        });

                }
            },

        }
    });

    app.mount('#app');
</script>